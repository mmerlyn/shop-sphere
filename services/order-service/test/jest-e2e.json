{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testTimeout": 30000,
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": true,
      "tsconfig": {
        "skipLibCheck": true,
        "allowJs": true,
        "strict": false
      }
    }
  }
}
