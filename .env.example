# ===========================================
# Shop Sphere Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here

# PgAdmin Configuration
PGADMIN_EMAIL=admin@shopsphere.com
PGADMIN_PASSWORD=your-secure-pgadmin-password-here

# Database URLs (include your POSTGRES_PASSWORD in these)
DATABASE_URL_USERS=postgresql://postgres:your-secure-postgres-password-here@localhost:5432/users_db
DATABASE_URL_PRODUCTS=postgresql://postgres:your-secure-postgres-password-here@localhost:5433/products_db
DATABASE_URL_ORDERS=postgresql://postgres:your-secure-postgres-password-here@localhost:5434/orders_db

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# JWT Configuration
JWT_SECRET=generate-a-secure-random-string-here
JWT_REFRESH_SECRET=generate-another-secure-random-string-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports (optional, defaults shown)
# USER_SERVICE_PORT=3001
# PRODUCT_SERVICE_PORT=3002
# CART_SERVICE_PORT=3003
# ORDER_SERVICE_PORT=3004
# API_GATEWAY_PORT=8000

# CORS
FRONTEND_URL=http://localhost:3000
